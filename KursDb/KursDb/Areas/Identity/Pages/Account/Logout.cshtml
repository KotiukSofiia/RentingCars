@page
@model LogoutModel

@{
    ViewData["Title"] = "Вихід";
}

<div class="container my-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="text-center mt-4">
            <p>Ви дійсно хочете вийти з аккаунту?</p>
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger">Вийти</button>
            </form>
            <a href="/" class="btn btn-secondary ms-2">Скасувати</a>
        </div>
    }
    else
    {
        <div class="text-center mt-4">
            <p>Ви успішно вийшли з системи.</p>
            <a href="/" class="btn btn-primary">На головну</a>
        </div>
    }
</div>
