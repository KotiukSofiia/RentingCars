@model IEnumerable<Car>

<div class="container my-5">
    <!-- Інформація про сайт -->
    <div class="text-center mb-5">
        <h1 class="mb-3">🚗 Ласкаво просимо на сайт оренди автомобілів!</h1>
        <p class="lead">
            <strong>Шукаєте автомобіль для подорожі, роботи чи особливого випадку?</strong> Ми пропонуємо вам найзручніший спосіб знайти, обрати та забронювати автомобіль онлайн!
        </p>
    </div>
    <div class="text-left">
        <p>
            Прокат авто – це надійно, комфортно та вигідно!
            Орендуй для ділової зустрічі, на час відпочинку, у разі ремонту свого авто та просто для комфортного пересування у будь-який момент.

            Автомобіль можна обрати та забронювати на потрібний період онлайн, у будь-який зручний час від кількох годин до кількох місяців.
        </p>
    </div>


    <!-- Доступні автомобілі -->
    <h2 class="text-center my-4">Доступні автомобілі</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var car in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model">
                    <div class="card-body">
                        <h5 class="card-title">@car.Brand @car.Model</h5>
                        <p class="card-text">
                            Ціна за день: <strong>@car.PricePerDay.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</strong>
                        </p>
                        <p class="card-text text-muted">
                            Статус: @car.Status
                        </p>
                        <a href="/Home/Details/@car.CarId" class="btn btn-primary">Переглянути</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
